                marker = new google.maps.Marker({
                  map: map,
                  position: new google.maps.LatLng(41.59238300000002,-88.0564281)
                });
                infowindow = new google.maps.InfoWindow({
                  content:'<strong>Canal Auto Rebuilders</strong><br>601 S. State St. Lockport,IL 60441<br>'
